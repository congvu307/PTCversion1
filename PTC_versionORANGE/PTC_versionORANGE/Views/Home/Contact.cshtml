@using PTC_versionORANGE.Controllers
@{
    ViewBag.Title = "PTC Contact Us";
}
<script>
    function load_ajax ()
    {
        $.ajax({
            type: "POST",
            url: '@Url.Action("SendMyMail", "SendMail")',
            data: JSON.stringify({
                FullName: $("#contact-fullname").val(),
                PhoneNumber: $("#contact-phonenumber").val(),
                EmailAddress: $("#contact-email").val(),
                Message: $("#contact-message").val()
            }),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (FullName) {
                alert(FullName);
            }
        });
    }
</script>
<section>
    <div class="row" style="margin:3em 0;">

        <div class="col-lg-6" style="padding-left:2em;">
            <form>
                <div class="form-group">
                    <label for="contact-fullname">Full Name</label>
                    <input type="text" class="form-control" id="contact-fullname" placeholder="Enter your full name">
                </div>
                <div class="form-group">
                    <label for="contact-phonenumber">Phone Number</label>
                    <input type="text" class="form-control" id="contact-phonenumber" placeholder="Enter your phone number">
                </div>
                <div class="form-group">
                    <label for="contact-email">Email address</label>
                    <input type="email" class="form-control" id="contact-email" aria-describedby="emailHelp" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="contact-message">Message</label>
                    <textarea class="form-control" id="contact-message" rows="3"></textarea>
                </div>

                <button onclick="load_ajax();" id="contact-button" style="width:280px;" type="submit" class="text-white btn mybackground btn-warning">Submit</button>
            </form>
        </div>
        <div class="col-lg-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.298650048134!2d106.69709731480097!3d10.788422992313414!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f355af2f03b%3A0x52e1f69027a3f6ac!2zNjAgTmd1eeG7hW4gxJDDrG5oIENoaeG7g3UsIMSQYSBLYW8sIFF14bqtbiAxLCBI4buTIENow60gTWluaA!5e0!3m2!1svi!2s!4v1518265623957" frameborder="0" style="border:0; width:90%;height:100%;" allowfullscreen></iframe>
        </div>
    </div>
</section>
